---
import '../styles/global.css';
import Nav from '../components/Nav.astro';
import PostHog from '../components/posthog.astro'
const { title = "Lone Yeti Development", description = "Professional software development with a focus on quality and innovation." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Dark mode script -->
    <script is:inline>
      const theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.classList.toggle('dark', theme === 'dark');
    </script>
    <PostHog />
  </head>
  <body class="min-h-screen bg-white dark:bg-slate-900 text-slate-800 dark:text-slate-100 bg-pattern">
    <header class="fixed w-full bg-white/80 dark:bg-slate-900/90 backdrop-blur-md z-50 py-4 px-6 border-b border-slate-100 dark:border-slate-800 transition-all duration-300">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <a href="/" class="flex items-center gap-3">
          <div class="w-10 h-10 relative overflow-hidden">
            <img src="/lone-yeti-logo-transparent.png" alt="Lone Yeti Logo" class="w-full h-full object-contain animate-float" />
          </div>
          <span class="text-xl font-semibold hidden sm:block">
            <span class="gradient-text">Lone Yeti</span>
          </span>
        </a>
        
        <Nav />
        
        <button id="theme-toggle" class="p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden dark:block" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
          </svg>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 dark:hidden" viewBox="0 0 20 20" fill="currentColor">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
          </svg>
        </button>
      </div>
    </header>
    
    <main class="pt-24">
      <slot />
    </main>
    
    <footer class="mt-20 py-12 px-6 bg-slate-50 dark:bg-slate-800 border-t border-slate-200 dark:border-slate-700">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <div class="flex items-center gap-3 mb-4">
              <img src="/lone-yeti-logo-transparent.png" alt="Lone Yeti Logo" class="w-8 h-8 object-contain" />
              <span class="text-lg font-semibold"><span class="gradient-text">Lone Yeti</span></span>
            </div>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
              Professional software development with a focus on quality and innovation.
            </p>
            <div class="flex gap-4 text-slate-600 dark:text-slate-400">
              <a href="https://github.com/loneyeti" class="hover:text-primary transition-colors" aria-label="GitHub">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
          
          <div>
            <h3 class="font-semibold text-lg mb-4">Products</h3>
            <ul class="space-y-2 text-slate-600 dark:text-slate-400">
              <li><a href="https://snowgoose.app" class="hover:text-primary transition-colors">Snowgoose</a></li>
              <li><a href="https://novelrunner.app" class="hover:text-primary transition-colors">Novelrunner</a></li>
              <li><a href="https://github.com/loneyeti" class="hover:text-primary transition-colors">Open Source</a></li>
            </ul>
          </div>
          
          <div>
            <h3 class="font-semibold text-lg mb-4">Links</h3>
            <ul class="space-y-2 text-slate-600 dark:text-slate-400">
              <li><a href="/" class="hover:text-primary transition-colors">Home</a></li>
              <li><a href="/blog" class="hover:text-primary transition-colors">Blog</a></li>
            </ul>
          </div>
        </div>
        
        <div class="mt-12 pt-8 border-t border-slate-200 dark:border-slate-700 text-center text-sm text-slate-500 dark:text-slate-500">
          <p>&copy; {new Date().getFullYear()} Lone Yeti Development. All rights reserved.</p>
        </div>
      </div>
    </footer>
    
    <script>
      // Theme toggle
      const themeToggle = document.getElementById('theme-toggle');
      if (themeToggle) {
        themeToggle.addEventListener('click', () => {
          const isDark = document.documentElement.classList.toggle('dark');
          localStorage.setItem('theme', isDark ? 'dark' : 'light');
        });
      }
      
      // Shrink header on scroll
      const header = document.querySelector('header');
      if (header) {
        window.addEventListener('scroll', () => {
          if (window.scrollY > 50) {
            header.classList.add('py-2');
            header.classList.remove('py-4');
          } else {
            header.classList.remove('py-2');
            header.classList.add('py-4');
          }
        });
      }
    </script>
  </body>
</html>
