---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get latest blog posts from collection
const allPosts = Object.values(import.meta.glob('./blog/*.mdx', { eager: true }));
const featuredPosts = allPosts
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);
---

<Layout title="Lone Yeti Development | Software Development & Products">
  <!-- Hero Section -->
  <section class="hero-gradient text-white relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-6 py-24 md:py-32">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="animate-fade-in">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
            Software that <span class="relative inline-block">
              <span class="relative z-10 text-amber-500">is actually</span>
              <span class="absolute bottom-2 left-0 w-full h-3 bg-accent/40 rounded-full z-0"></span>
            </span> useful
          </h1>
          <p class="text-xl md:text-2xl text-blue-100 mb-8 leading-relaxed">
            Lone Yeti Development creates thoughtful software products with a focus on quality, usability, and innovation.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="#featured-products" class="btn-primary px-6 py-3 rounded-lg font-medium inline-flex items-center">
              Explore Products
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 10.293a1 1 0 010 1.414l-6 6a1 1 0 01-1.414 0l-6-6a1 1 0 111.414-1.414L9 14.586V3a1 1 0 012 0v11.586l4.293-4.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
            </a>
            <a href="/blog" class="btn-secondary px-6 py-3 rounded-lg font-medium text-white">
              Read the Blog
            </a>
          </div>
        </div>
        <div class="flex justify-center md:justify-end">
          <div class="relative animate-float">
            <div class="w-64 h-64 md:w-80 md:h-80 relative">
              <img src="/lone-yeti-logo-transparent.png" alt="Lone Yeti Logo" class="w-full h-full">
              <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-primary/10 rounded-full filter blur-3xl -z-10"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Abstract Shapes -->
    <div class="absolute -bottom-16 -left-16 w-64 h-64 bg-blue-400/20 rounded-full filter blur-3xl"></div>
    <div class="absolute top-16 -right-16 w-64 h-64 bg-accent/10 rounded-full filter blur-3xl"></div>
  </section>
  
  <!-- Featured Products Section -->
  <section id="featured-products" class="py-24 px-6">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">
        <span class="gradient-text">Featured Products</span>
      </h2>
      
      <!-- Snowgoose -->
      <div class="mb-24">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="order-2 md:order-1">
            <div class="gradient-border inline-block mb-5">
              <div class="px-3 py-1">
                <span class="font-medium">Web App</span>
              </div>
            </div>
            <h3 class="text-3xl font-bold mb-4">Snowgoose</h3>
            <p class="text-lg text-slate-700 dark:text-slate-300 mb-6 leading-relaxed">
              Your unified gateway to frontier AI models. Access OpenAI, Anthropic, Google, and other leading AI services through a single, predictable subscription. Eliminate complex token-based billing and multiple accounts.
            </p>
            <ul class="space-y-3 mb-8">
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Access multiple top-tier AI models through one elegant interface</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Customize AI interactions with our unique "Persona" system</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Control output formats (Markdown, JSON, HTML, CSV)</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Enjoy predictable pricing with simple monthly plans starting at $5</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Leverage advanced features like vision support and image generation</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Fully open sourced</span>
              </li>
            </ul>
            <a href="https://snowgoose.app" target="_blank" rel="noopener" class="btn-primary px-6 py-3 rounded-lg font-medium inline-flex items-center">
              Learn More
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
          <div class="order-1 md:order-2">
            <div class="rounded-2xl overflow-hidden shadow-2xl card-hover bg-white dark:bg-slate-800 relative">
              <div class="absolute inset-0 bg-gradient-to-br from-primary-100 to-blue-100 dark:from-primary-900/30 dark:to-blue-900/20 opacity-30"></div>
              <div class="relative p-6 flex justify-center">
                <div class="w-full max-w-md">
                  <!-- Placeholder for Snowgoose Screenshot -->
                  <div class="aspect-video bg-gradient-to-br from-primary-700 to-blue-500 rounded-lg flex items-center justify-center">
                    <img src="/snowgoose-screenshot.png" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Novelrunner -->
      <div>
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div class="order-2">
            <div class="gradient-border inline-block mb-5">
              <div class="px-3 py-1">
                <span class="font-medium">iOS App</span>
              </div>
            </div>
            <h3 class="text-3xl font-bold mb-4">Novelrunner</h3>
            <p class="text-lg text-slate-700 dark:text-slate-300 mb-6 leading-relaxed">
              The perfect companion for writers. Write episodically, track your progress, export in manuscript format.
            </p>
            <ul class="space-y-3 mb-8">
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Split your writing into episodes to maximize impact</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Create an overall writing goal and episodic writing goals</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>With Novelrunner Plus, use AI to offer suggestions</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Generous free features without subscribing</span>
              </li>
            </ul>
            <a href="https://novelrunner.app" target="_blank" rel="noopener" class="btn-primary px-6 py-3 rounded-lg font-medium inline-flex items-center">
              Learn More
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
          <div class="order-1">
            <div class="rounded-2xl overflow-hidden shadow-2xl card-hover bg-white dark:bg-slate-800 relative">
              <div class="absolute inset-0 bg-gradient-to-br from-blue-100 to-accent/10 dark:from-blue-900/30 dark:to-accent/5 opacity-30"></div>
              <div class="relative p-6 flex justify-center">
                <div class="w-full max-w-xs">
                  <!-- Placeholder for Novelrunner Screenshot -->
                  <div class="aspect-[16/9] bg-gradient-to-br from-blue-500 to-accent rounded-lg flex items-center justify-center">
                    <img src="/novelrunner-screenshot.png" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Blog Posts -->
  <section class="py-24 px-6 bg-slate-50 dark:bg-slate-800/50">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-wrap items-center justify-between mb-12">
        <h2 class="text-3xl md:text-4xl font-bold gradient-text mb-4 md:mb-0">
          Latest from the Blog
        </h2>
        <a href="/blog" class="inline-flex items-center gap-1 text-primary-700 dark:text-primary-100 font-medium hover:underline">
          View all posts
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredPosts.map((post) => (
          <article class="post-card bg-white dark:bg-slate-800 rounded-xl overflow-hidden shadow-lg flex flex-col h-full">
            <div class="p-6 flex-1 flex flex-col">
              <div class="flex flex-wrap gap-2 mb-4">
                {post.frontmatter.tags?.map((tag) => (
                  <span class="tag px-3 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 text-xs rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
              <h3 class="text-xl font-bold mb-3 flex-initial">
                <a href={`${post.url}`} class="hover:text-primary transition-colors">
                  {post.frontmatter.title}
                </a>
              </h3>
              <p class="text-slate-600 dark:text-slate-400 mb-6 flex-1">
                {post.frontmatter.description}
              </p>
              <div class="flex flex-wrap items-center gap-3 text-sm text-slate-500 dark:text-slate-400 mt-auto">
                <time datetime={post.frontmatter.pubDate}>{new Date(post.frontmatter.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
                {/* Read time is not available in collection data, removing */}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-24 px-6">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to explore Lone Yeti's products?</h2>
      <p class="text-lg text-slate-600 dark:text-slate-400 mb-10 max-w-2xl mx-auto">
        Ready to try unifying your LLM usage? Snowgoose might be for you. Check it out!
      </p>
      <div class="flex flex-wrap justify-center gap-6">
        <a href="https://snowgoose.app" target="_blank" rel="noopener" class="btn-primary px-8 py-4 rounded-lg font-medium">
          Try Snowgoose
        </a>
        <a href="/blog" class="btn-secondary px-8 py-4 rounded-lg font-medium text-slate-700 dark:text-slate-200 border border-slate-200 dark:border-slate-700">
          Read the Blog
        </a>
      </div>
    </div>
  </section>
</Layout>
